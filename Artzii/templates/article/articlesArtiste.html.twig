{% extends 'base2.html.twig' %}

{% block title %}Artiiz{% endblock %}

{% block body %}

    {% if articles is empty %}
	   <section class="postsEmpty">
			<article class="article1"> 
					<img class="img1" src={{asset("assets/images/socialMediaPost2.png")}} alt="" width="250px" class="mt-3 mb-3"> 
					<h4 style="margin-top: 20px;">Vous n'avez pas des articles</h4>
					<p>Vous n'avez pas encore ajouté des articles, Pensez-vous à ajouter une ?</p>
					<a href="{{ path('app_articles') }}" class="btn btn-secondary">Ajouter un article</a>
			</article>
		</section>
    {% else %}

    {% for article in articles %}
        <section class="posts">
            
           <img class="img2" src="{{asset('assets/images/userImage.png')}}" alt="" width="65px" style="display: inline-block; margin-top: 10px; margin-left: 10px;">
           <div style="display: inline-block; margin-top: 10px; margin-left: 0px;font-size: 17px; font-color:black; font-weight: bold;">Mokhtar Hadded</div>

           <a href="{{ path('app_addToBasket', {'idArticle': article.getArtid()} ) }}">
           <img  src="{{asset('assets/images/editBlack.png')}}" alt="modifier" width="34px" style="display: inline-block; margin-top: 10px; margin-left: 338px;">
            </a>
           
           <a href="{{ path('app_removeArticleArtiste', {'idArticle': article.getArtid()} ) }}">
           <img  src="{{asset('assets/images/trash.png')}}" alt="supprimer" width="52px" style="display: inline-block; margin-top: 10px; margin-left: 0px;">
        </a>
            

            <article class="article1"> 
                <h2>{{article.getArtlib()}}</h2>
                <div class="metadat">
                
                   Publié le: 01/02/2023 à 12:00 <span class="badge bg-dark text-white p-1">Nature</span>
                </div>
                <div class="content">
                   
                    <img class="img1" src="{{asset(article.getArtimg())}}" alt="" width="360px" class="mt-3 mb-3">

                    <br>
                </div> 
                  <div style="font-weight:bold; margin-top: 6px;margin-left: auto; margin-right: auto;font-size: 19px;">{{article.getArtdesc()}} cm</div>
            </article>
            <p style="font-weight:bold; color:black; margin-left:515px; font-size: 21px;">Prix: {{article.getArtprix()}}DT</p>

        </section>
    {% endfor %}


    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever="@mdo">Ajouter article</button>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Ajout article</h5>
        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="recipient-name" class="col-form-label"> Nom de la piece:</label>
            <input type="text" class="form-control" id="recipient-name">
          </div>

            <div class="form-group">
                <label for="recipient-name" class="col-form-label">Dimension:</label>

                <div class="row">

                    <div class="col">
                        <input type="number" class="form-control" placeholder="Hauteur">
                    </div>

                    <div class="col">
                        <input type="number" class="form-control" placeholder="Largeur">
                    </div>
                    
                </div>

            </div>

            <div class="form-group">
                <label for="recipient-name" class="col-form-label">Prix:</label>
                <input type="text" class="form-control" id="recipient-name">
            </div>

            <div class="form-group">
                <label for="recipient-name" class="col-form-label">Catégorie:</label>
                <input type="text" class="form-control" id="recipient-name">
            </div>

            <div class="form-group">
                <label for="recipient-name" class="col-form-label">Image:</label>
                <input type="file" class="form-control" id="recipient-name">
            </div>

            
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
        <button type="button" class="btn btn-primary">Ajouter l'article</button>
      </div>
    </div>
  </div>
</div>

    {% endif %}




























